object Ceaser extends App{

	val alphabet = "ABCDEFGHIJKLMNOPQRSTUVWXYZ"

	val shift = (3 + alphabet.size) % alphabet.size

 def encrypt(inputText:String):String={
	val outputText = inputText.map( (c: Char) => { 

		val x = alphabet.indexOf(c.toUpper)

		if (x == -1){
			c
		}
		else{
			alphabet((x + shift) % alphabet.size)
			} 
	});

	return outputText }
	println(encrypt("hello"));
	
	
 def decrypt(inputText:String):String={
	val outputText = inputText.map( (c: Char) => { 

		val x = alphabet.indexOf(c.toUpper)

		if (x == -1){
			c
		}
		else{
			alphabet((x - shift) % alphabet.size)
			} 
	});

	return outputText }
	println(decrypt("khoor"));
	
}
  
